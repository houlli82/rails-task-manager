<div class="container">

  <h1 class="text-center my-5">Today's Tasks 📋</h1>

  <div class="add-task-btn">
    <%= link_to "Add New Task", new_task_path, class: "btn btn-outline-primary" %>
  </div>


  <% @tasks.each_with_index do |task, index| %>
    <div class="p-2 m-4 bg-info bg-opacity-10 border border-info">
      <p><%= task.title %>
      <%= task.completed ? "☑" : "☐" %></p>
      <%= link_to "Check it out!", task_path(task), class: "btn btn-primary" %>
    </div>
  <% end %>

</div>
