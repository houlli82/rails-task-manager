<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p>Task completed: <%= @task.completed ? "☑" : "☐" %></p>

<%= link_to "Back", tasks_path %>
<%= link_to "Edit", edit_task_path(@task) %>
<%= link_to "Delete", task_path(@task), method: 'delete', data: { confirm: "Delete task: Are you sure?" } %>
