<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p>Task completed: <%= @task.completed ? "☑" : "☐" %></p>

<%= link_to "Back", tasks_path, class: "btn btn-secondary" %>
<%= link_to "Edit", edit_task_path(@task), class: "btn btn-success" %>
<%= link_to "Delete", task_path(@task), method: 'delete', data: { confirm: "Delete task: Are you sure?" }, class: "btn btn-danger" %>
